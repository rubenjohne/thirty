<style type="text/css">
	#submitted_link {
		color:#8d775a;
		border-bottom:3px solid #8d775a;
	}
</style>

<%= render :partial => 'carousel_story', :locals => {:stories => @featured_stories} %>

<div class="stories">
	<% @stories.each_with_index do |story, index = 1| %>
		<% true_index = index + 1 %>
		
		<% if true_index == 1%>
			<ul>
				<li class="grid-story">
					<%= render :partial => 'submitted_story', :locals => {:story => story} %>
				</li>
		<% elsif true_index == @stories.size %>
				<li class="grid-story">
					<%= render :partial => 'submitted_story', :locals => {:story => story} %>
				</li>
			</ul>
		<% elsif (true_index % 5) == 0 %>	
				<li class="grid-story">
					<%= render :partial => 'submitted_story', :locals => {:story => story} %>
				</li>
			</ul>
			<ul>
		<% else %>		
				<li class="grid-story">
					<%= render :partial => 'submitted_story', :locals => {:story => story} %>
				</li>
		<% end %>		
	<% end %>
</div>	
