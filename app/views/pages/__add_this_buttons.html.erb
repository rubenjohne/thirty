<div id="social-buttons">
	<!-- AddThis Button BEGIN -->
	<div class="addthis_toolbox addthis_default_style"
		 addthis:url="<%= request.url %>"
         addthis:title="30 for 30 title"
         addthis:description="<%= @story.name %>">
		<a class="addthis_button_facebook"></a>
		<a class="addthis_button_twitter" tw:text="<%= @story.name %>" tw:title="Tweet title" tw:url="<%= request.url %>" alt="Share to Twitter" /></a>
	</div>		
	<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4fceb155437252cd"></script>	
</div>		