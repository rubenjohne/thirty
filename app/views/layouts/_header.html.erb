<style type="text/css">
	header {
		height:80px;
	}
	ul.admin-links {
		float:left;
	}
	
	ul.admin-links, li {
		list-style:none;
	}
	
	ul.admin-links li {
		float:left;
		padding:10px;
		display:block;
		
	}
	
	ul.admin-links li a {
		color:#ed9bbf;
	}
	ul.admin-links li a:hover {
		color:#e22689;
	}
</style>

<header>
	<%= link_to "http://www.tadashishoji.com" do %>
		<%= image_tag "logo.png", :class => 'logo'%>
	<% end %>	
	<% if signed_in? %>
		<ul class="admin-links">
			<li><%= link_to "Sign out", signout_path, :method => :delete, :class => 'signout_link' %><l/i>
			<li><%= link_to "Home", root_path  %><l/i>				
			<li><%= link_to "Stories", stories_path %><l/i>
			<li><%= link_to "Needs Approval", for_approval_path %><l/i>
		</ul>
	<% end %>	
</header>	